<?xml version="1.0" encoding="UTF-8"?>
<!--
GnosisCore Ontological Taxonomy
================================
This taxonomy serves as a semantic contract for LLM prompts and outputs.
It defines the hierarchical, orthogonal structure of patterns, axes, and transformations.
-->

<GnosisTaxonomy version="1.0">
  
  <!-- Meta-Level Ontology -->
  <MetaOntology>
    <Dimension name="PatternSpace">
      <Description>The lattice of design patterns through which forms traverse</Description>
      <Orthogonality>Each pattern represents a distinct cognitive/processing mode</Orthogonality>
    </Dimension>
    <Dimension name="AxisSpace">
      <Description>The orthogonal parameters that define state and context</Description>
      <Orthogonality>Each axis captures an independent aspect of system state</Orthogonality>
    </Dimension>
    <Dimension name="TransformationSpace">
      <Description>The space of LLM-mediated transformations</Description>
      <Orthogonality>Each transformation type operates on distinct semantic dimensions</Orthogonality>
    </Dimension>
  </MetaOntology>

  <!-- Pattern Taxonomy -->
  <Patterns>
    
    <Pattern id="Origin" order="1">
      <Semantics>Ignition point; initial state genesis</Semantics>
      <Axes>
        <Axis name="form" type="entity">
          <Description>The traversing form/actor</Description>
          <Cardinality>0..1</Cardinality>
        </Axis>
        <Axis name="context" type="map">
          <Description>Accumulated semantic context</Description>
          <Cardinality>1</Cardinality>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>Initialize the semantic field for form '{form.name}' with no prior state</Structure>
        <ExpectedOutput>
          <Field name="initialization">Initial semantic state description</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Pulse" order="2">
      <Semantics>Energetic flow; propagation of change</Semantics>
      <Axes>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
        <Axis name="energy" type="scalar">
          <Description>Magnitude of propagated change</Description>
          <Range>0.0-1.0</Range>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>Given the current energy pulse, how does it propagate through the system?</Structure>
        <ExpectedOutput>
          <Field name="propagation">Description of energy flow</Field>
          <Field name="amplitude">Numeric energy level</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Formulation" order="3">
      <Semantics>Constraint matrix; structural definition</Semantics>
      <Axes>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
        <Axis name="constraints" type="list">
          <Description>Active constraints shaping the form</Description>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>Define the constraint matrix for the current state</Structure>
        <ExpectedOutput>
          <Field name="constraints">List of active constraints</Field>
          <Field name="structure">Emergent structural pattern</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Proliferation" order="4">
      <Semantics>Generative bloom; expansion of possibilities</Semantics>
      <Axes>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
        <Axis name="branches" type="integer">
          <Description>Number of generative branches</Description>
          <Range>1-10</Range>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>Generate multiple variations or branches from the current state</Structure>
        <ExpectedOutput>
          <Field name="variations">Array of generated possibilities</Field>
          <Field name="selection_criteria">Criteria for branch selection</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Pruning" order="5">
      <Semantics>Selective pressure; reduction to essential</Semantics>
      <Axes>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
        <Axis name="criteria" type="function">
          <Description>Selection function for pruning</Description>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>Apply selective pressure to reduce possibilities to essentials</Structure>
        <ExpectedOutput>
          <Field name="selected">Chosen branches/states</Field>
          <Field name="rationale">Reasoning for selection</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Awareness" order="6">
      <Semantics>Reflective core; delta consciousness</Semantics>
      <Axes>
        <Axis name="previous" type="state">
          <Description>Prior state for comparison</Description>
          <Cardinality>0..1</Cardinality>
        </Axis>
        <Axis name="current" type="state">
          <Description>Current state for comparison</Description>
          <Cardinality>1</Cardinality>
        </Axis>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
      </Axes>
      <PromptTemplate>
        <Structure>Compare previous state '{previous}' with current '{current}'. What is the meaningful difference?</Structure>
        <ExpectedOutput>
          <Field name="awareness_output">Semantic delta description</Field>
          <Field name="significance">Importance rating (0-1)</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Persistence" order="7">
      <Semantics>Energetic memory; retention of essence</Semantics>
      <Axes>
        <Axis name="current" type="state"/>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
        <Axis name="retention" type="scalar">
          <Description>Retention strength</Description>
          <Range>0.0-1.0</Range>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>Given the current state '{current}', what should be retained for future use?</Structure>
        <ExpectedOutput>
          <Field name="retained_essence">Core elements to persist</Field>
          <Field name="retention_strategy">How to maintain persistence</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Representation" order="8">
      <Semantics>Symbol scaffold; external interface</Semantics>
      <Axes>
        <Axis name="current" type="state"/>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
        <Axis name="audience" type="enum">
          <Values>internal|external|hybrid</Values>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>How would you summarize the current state '{current}' for external communication?</Structure>
        <ExpectedOutput>
          <Field name="representation">Symbolic representation</Field>
          <Field name="encoding">Encoding format/style</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Memory" order="9">
      <Semantics>Echo loop; recursive recall</Semantics>
      <Axes>
        <Axis name="current" type="state"/>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
        <Axis name="depth" type="integer">
          <Description>Recursion depth for memory</Description>
          <Range>1-5</Range>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>What important information from '{current}' should be stored for later recall?</Structure>
        <ExpectedOutput>
          <Field name="memory_output">Encoded memory content</Field>
          <Field name="associations">Related memory links</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>

    <Pattern id="Imprint" order="10">
      <Semantics>Output resolution; final manifestation</Semantics>
      <Axes>
        <Axis name="current" type="state"/>
        <Axis name="form" type="entity"/>
        <Axis name="context" type="map"/>
        <Axis name="permanence" type="boolean">
          <Description>Whether imprint is permanent</Description>
        </Axis>
      </Axes>
      <PromptTemplate>
        <Structure>What lasting effect does '{current}' have on the system?</Structure>
        <ExpectedOutput>
          <Field name="imprint">Permanent system change</Field>
          <Field name="ripple_effects">Secondary consequences</Field>
        </ExpectedOutput>
      </PromptTemplate>
    </Pattern>
    
  </Patterns>

  <!-- Transformation Taxonomy -->
  <Transformations>
    
    <TransformationType id="Semantic">
      <Description>Meaning-preserving transformations</Description>
      <Operations>
        <Operation name="abstraction">Increase semantic level</Operation>
        <Operation name="concretization">Decrease semantic level</Operation>
        <Operation name="translation">Cross-domain mapping</Operation>
      </Operations>
    </TransformationType>
    
    <TransformationType id="Structural">
      <Description>Form-altering transformations</Description>
      <Operations>
        <Operation name="composition">Combine multiple elements</Operation>
        <Operation name="decomposition">Break into components</Operation>
        <Operation name="reorganization">Rearrange structure</Operation>
      </Operations>
    </TransformationType>
    
    <TransformationType id="Temporal">
      <Description>Time-based transformations</Description>
      <Operations>
        <Operation name="projection">Future state prediction</Operation>
        <Operation name="regression">Past state reconstruction</Operation>
        <Operation name="synchronization">Align temporal states</Operation>
      </Operations>
    </TransformationType>
    
  </Transformations>

  <!-- Delta Taxonomy -->
  <Deltas>
    
    <DeltaType id="Magnitude">
      <Description>Quantitative change measurement</Description>
      <Metrics>
        <Metric name="scalar">Single value change</Metric>
        <Metric name="vector">Multi-dimensional change</Metric>
        <Metric name="tensor">Complex relational change</Metric>
      </Metrics>
    </DeltaType>
    
    <DeltaType id="Quality">
      <Description>Qualitative change classification</Description>
      <Categories>
        <Category name="emergence">New property appears</Category>
        <Category name="dissolution">Property disappears</Category>
        <Category name="transformation">Property changes form</Category>
      </Categories>
    </DeltaType>
    
  </Deltas>

  <!-- Prompt Construction Rules -->
  <PromptingRules>
    
    <Rule id="PatternReference">
      <Description>Always specify the active pattern when prompting</Description>
      <Template>Using the {pattern_name} pattern with axes {axis_list}...</Template>
    </Rule>
    
    <Rule id="AxisSpecification">
      <Description>Explicitly state all relevant axes and their values</Description>
      <Template>Given {axis_name}='{axis_value}' for all active axes...</Template>
    </Rule>
    
    <Rule id="OutputStructure">
      <Description>Request structured output matching taxonomy fields</Description>
      <Template>Respond with JSON containing fields: {expected_fields}</Template>
    </Rule>
    
    <Rule id="SemanticContext">
      <Description>Include semantic context from previous patterns</Description>
      <Template>Considering the accumulated context: {context_summary}...</Template>
    </Rule>
    
  </PromptingRules>

  <!-- Output Parsing Schema -->
  <OutputSchema>
    
    <ResponseStructure>
      <Field name="pattern" type="string" required="true">
        <Description>The pattern that generated this response</Description>
      </Field>
      <Field name="axes" type="object" required="true">
        <Description>Active axis values used in generation</Description>
      </Field>
      <Field name="output" type="object" required="true">
        <Description>Pattern-specific output fields</Description>
      </Field>
      <Field name="metadata" type="object" required="false">
        <Description>Additional metadata (confidence, alternatives, etc.)</Description>
      </Field>
    </ResponseStructure>
    
    <ValidationRules>
      <Rule>Output must include all required fields for the pattern</Rule>
      <Rule>Axis values must match their defined types</Rule>
      <Rule>Numeric values must be within specified ranges</Rule>
    </ValidationRules>
    
  </OutputSchema>

</GnosisTaxonomy>
